<!DOCTYPE.html>
<html>
  <head>
    <title></title>
    <style> </style>
  </head>
  <body>
    <div class="search">
      <form action='/movies?' method='GET'>
        <input type='Text' name='search_query' size='30' placeholder='' >
        <button type='submit'>Search by movie</button>
      </form>

    </div>
    <div class="search">
      <form action='/actors/search/' method='GET'>
        <input type='Text' name='search_query' size='30' placeholder='' >
        <button type='submit'>Search by actor</button>
      </form>

    </div>
    <section class="movies">
    <table>
      <tr>
        <th><a href="/movies?sort_by=movies">Movies</a></th>
        <th><a href="/movies?sort_by=year">Year</a></th>
        <th><a href="/movies?sort_by=rating">Rating</a></th>
        <th><a href="/movies?sort_by=genre">Genre</a></th>
        <th><a href="/movies?sort_by=studio">Studio</a></th>
      </tr>
      <% @results.each do |movie| %>
        <tr>
          <td>
            <a href="/movies/<%=movie["id"]%>"> <%= movie["title"] %></a>
          </td>
          <td>
            <%= movie["year"] %>
          </td>
          <td>
            <%= movie["rating"] %>
          </td>
          <td>
            <%= movie["genre"] %>
          </td>
          <td>
            <%= movie["studio"] %>
          </td>
        </tr>
      <% end %>


    </table>
    </section>
  </body>
